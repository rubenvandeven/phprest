{
    "name": "phprest/phprest",
    "description": "Php Rest Framework.",
    "keywords": ["phprest", "framework", "micro", "rest", "restful", "api"],
    "license": "MIT",
    "type": "library",
    "authors": [
        {
            "name": "Adam Balogh",
            "email": "baloghbh@gmail.com",
            "homepage": "http://code-chronicle.blogspot.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": ">=5.4.0",
        "alexbilbie/proton": "~1.4.0",
        "willdurand/negotiation": "~1.3.4",
        "willdurand/hateoas": "~2.3.0",
        "stack/builder": "~1.0.3",
        "monolog/monolog": "^1.12",
        "symfony/console": "^2.6.4",
        "league/booboo": "~1.0.0"
    },
    "require-dev": {
        "phpunit/phpunit": "~4.2.5",
        "mockery/mockery": "~0.9.2",
        "satooshi/php-coveralls": "dev-master",
        "squizlabs/php_codesniffer": "~2.3.0"
    },
    "bin": ["bin/phprest"],
    "autoload": {
        "psr-4": {
            "Phprest\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Phprest\\Stub\\": "stub/"
        }
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.0.x-dev"
        }
    },
    "suggest": {
        "phprest/phprest-service-request-filter": "For filtering Entites.",
        "phprest/phprest-service-validator": "For validating Entities.",
        "phprest/phprest-service-orm": "For managing Relational Databases."
    }
}
